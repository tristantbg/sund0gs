#featured-exhibition
	position fixed
	width 100%
	top 0
	left 0
	height 100vh
	padding-left "calc(16.6666667% - %s)" % ($padding)
	padding-right "calc(16.6666667% - %s)" % ($padding)
	padding-top ($padding-desktop*2+$logo-height-desktop*2)
	padding-bottom ($padding-desktop*2+$logo-height-desktop)
	// padding-bottom (1.2 + $padding * 2)
	+below($md)
		padding-top ($padding-mobile*2+$logo-height-mobile)
		padding-bottom ($padding-mobile*3+$logo-height-mobile)
	img
		width 100%
		height 100%
		min-height 70px
		object-fit contain
	#featured-exhibition--description
		position absolute
		bottom 0
		left 0
		width 100%
		
		